@startuml
class InitializeSimpletron{
    +main(String[] args)
}

class Simpletron{
    memory: Memory
    -readInstructions()
    -executeInstructions()
}

class Memory{
    +memoryInstructions: int[]
    +accumulator: int
    +branch: int
    +specialResgister: int
    +addMemory(count: int, memoryLocation: int)
    +loadInstructionMemory(count: int)
}

class Operation{
    -operando: int
    -codigo: int
    +operations(memory: int[], accumulator: int, specialRegister): int[]
}

